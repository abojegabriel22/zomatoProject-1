function language(name,country){
    this.name = name
    this.country = country
    this.greet = () => {
        return `say hi to ${name}`
    }
}


function language(name,country){
    this.name = name
    this.country = country
    this.greet = () => {
        return `say hi to ${name}`
    }
}

